  }

  @keyframes sticky-border-spin {
    to { --sticky-angle: 360deg; }
  }

  @property --sticky-angle {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }

  /* Sweeping accent line */
  .sticky-accent-line {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(6, 182, 212, 0.9),
      rgba(37, 99, 235, 0.9),
      transparent
    );
    background-size: 200% 100%;
    animation: sticky-accent-sweep 2.5s ease-in-out infinite;
  }

  @keyframes sticky-accent-sweep {
    0%, 100% { background-position: -100% 0; }
