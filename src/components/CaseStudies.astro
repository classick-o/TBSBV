---
import AnimatedWaveLines from './AnimatedWaveLines.astro';
const cases = [
  {
    category: "Cyber Investigation",
    title: "Global Cryptocurrency Fraud Investigation",
    challenge:
      "A multinational corporation lost $12M in a sophisticated crypto scam involving multiple jurisdictions.",
    solution:
      "Deployed advanced blockchain analysis and international cooperation to trace digital assets across 8 countries.",
    results: [
      "$12M successfully traced",
      "Funds identified across multiple international jurisdictions",
      "Coordinated criminal network dismantled",
      "Actionable intelligence delivered to relevant authorities and compliance teams",
    ],
    gradient: "from-cyan-500 to-blue-500",
    image: "/TBSBV/assets/images/photo-1710957987034.webp",
  },
  {
    category: "Due Diligence",
    title: "Pre-Acquisition Corporate Intelligence",
    challenge:
      "A private equity firm required comprehensive due diligence on a target company with a complex ownership structure and cross-border exposure.",
    solution:
      "Our team conducted an in-depth corporate intelligence investigation, including beneficial ownership analysis, financial background review, and risk assessment. The review identified previously undisclosed liabilities and structural concerns that were not apparent through standard due diligence channels.",
    results: [
      "Transaction terms reassessed",
      "Risk exposure significantly reduced",
      "Stronger negotiating position achieved",
      "Enhanced decision-making confidence for stakeholders",
    ],
    gradient: "from-blue-500 to-indigo-500",
    image: "/TBSBV/assets/images/photo-1634848577969.webp",
  },
  {
    category: "Reputation Management",
    title: "Executive Reputation Crisis Response",
    challenge:
      "C-suite executive faced coordinated online defamation campaign threatening career and company reputation.",
    solution:
      "Implemented 360Â° reputation management strategy including threat identification, legal action, and positive PR.",
    results: [
      "Threats neutralized",
      "Reputation restored",
      "Legal recourse secured",
    ],
    gradient: "from-indigo-500 to-purple-500",
    image: "/TBSBV/assets/images/photo-1676911809746.webp",
  },
];
---

<section
  id="case-studies"
  class="relative py-5 sm:py-8 lg:py-12 bg-gradient-to-b from-white to-slate-50 overflow-hidden"
>
  <!-- Background Gradient Orbs -->
  <div class="absolute top-20 right-20 w-[600px] h-[600px] bg-gradient-to-br from-cyan-100/30 to-transparent blur-3xl"></div>
  <div class="absolute bottom-20 left-20 w-[500px] h-[500px] bg-gradient-to-br from-blue-100/30 to-transparent blur-3xl"></div>

  <div class="relative z-10 max-w-[1600px] mx-auto px-6 sm:px-8 lg:px-12 xl:px-20">
    <!-- Section Header -->
    <div data-animate class="mb-4 sm:mb-6 lg:mb-10">
      <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4 sm:gap-8">
        <div>
          <div class="inline-flex items-center gap-2 px-5 py-2 bg-cyan-50 border border-cyan-100 mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 text-cyan-600"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
            <span class="text-xs font-bold text-cyan-600 tracking-[0.2em] uppercase">Success Stories</span>
          </div>
          <h2 class="text-3xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-[1.05] tracking-[-0.02em]">
            Real
            <span class="bg-gradient-to-r from-cyan-600 via-blue-600 to-indigo-600 bg-clip-text text-transparent"> Results</span>
          </h2>
        </div>
        <p class="text-lg text-slate-600 leading-relaxed max-w-md sm:pb-2">
          See how we've helped organizations navigate complex digital threats and achieve measurable outcomes.
        </p>
      </div>
    </div>

    <!-- Case Studies - 3-column card grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {cases.map((caseStudy) => (
        <article data-animate class="group bg-white border-2 border-slate-200 hover:border-cyan-300 overflow-hidden transition-all duration-500 hover:shadow-2xl flex flex-col">

          <!-- Image -->
          <div class="relative h-52 overflow-hidden flex-shrink-0">
            <img
              src={caseStudy.image}
              alt={caseStudy.title}
              loading="lazy"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
            />
            <div class={`absolute inset-0 bg-gradient-to-br ${caseStudy.gradient} opacity-30 mix-blend-multiply`}></div>
            <!-- Category label at bottom of image -->
            <div class="absolute bottom-0 left-0 right-0 px-5 py-3 bg-gradient-to-t from-slate-900/85 to-transparent">
              <span class="text-xs font-bold text-white uppercase tracking-[0.2em]">{caseStudy.category}</span>
            </div>
          </div>

          <!-- Gradient accent line -->
          <div class={`h-1 bg-gradient-to-r ${caseStudy.gradient} flex-shrink-0`}></div>

          <!-- Content -->
          <div class="p-6 flex flex-col flex-1">
            <!-- Title -->
            <h3 class="text-xl font-bold text-slate-900 mb-3 leading-tight group-hover:text-cyan-600 transition-colors">
              {caseStudy.title}
            </h3>

            <!-- Challenge -->
            <p class="text-sm text-slate-600 leading-relaxed mb-4 flex-1">
              {caseStudy.challenge}
            </p>

            <!-- Impact results -->
            <div class="border-t-2 border-slate-100 pt-4 mb-5">
              <span class="text-xs font-bold text-cyan-600 uppercase tracking-[0.2em] block mb-3">Impact</span>
              <div class="space-y-2">
                {caseStudy.results.map((result) => (
                  <div class="flex items-start gap-2.5">
                    <div class={`flex-shrink-0 w-4 h-4 bg-gradient-to-br ${caseStudy.gradient} flex items-center justify-center mt-0.5`}>
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="w-2.5 h-2.5 text-white"><path d="M20 6 9 17l-5-5"/></svg>
                    </div>
                    <span class="text-sm text-slate-700 font-medium leading-snug">{result}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- CTA -->
            <a
              href="#contact"
              class="inline-flex items-center gap-2 text-slate-900 font-bold text-sm border-b border-slate-300 pb-0.5 hover:text-cyan-600 hover:border-cyan-600 transition-all self-start group/link"
            >
              Discuss Your Case
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 group-hover/link:translate-x-1 transition-transform"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- Bottom CTA Banner -->
    <div data-animate class="mt-10 relative overflow-hidden bg-gradient-to-r from-slate-950 via-blue-950 to-slate-950">
      <AnimatedWaveLines />

      <div class="relative p-8 sm:p-10 lg:p-14">
        <div class="max-w-4xl mx-auto text-center">
          <h3 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white mb-3 sm:mb-4 leading-tight">
            Your Challenge Could Be Our Next Success Story
          </h3>
          <p class="text-sm sm:text-base lg:text-lg text-slate-300 mb-6 sm:mb-8 leading-relaxed">
            Every case is unique. Let us create a tailored solution for your specific needs.
          </p>
          <a
            href="#contact"
            class="inline-flex items-center gap-2 px-6 py-2.5 bg-gradient-to-r from-cyan-500 to-blue-500 text-white font-bold text-sm hover:shadow-2xl hover:shadow-cyan-500/50 transition-all duration-300 hover:-translate-y-1"
          >
            <span>Start Your Journey</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
