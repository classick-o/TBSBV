    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  #testimonials [data-animate].visible {
    opacity: 1;
    transform: translateY(0);
  }

  .testimonial-item {
    transition: opacity 0.3s ease-out;
  }
</style>

<script>
  // Testimonial carousel
  const totalTestimonials = 4;
  let activeIndex = 0;
  let autoInterval: ReturnType<typeof setInterval>;

  const testimonialItems = document.querySelectorAll('.testimonial-item');
  const dots = document.querySelectorAll('.testimonial-dot');
  const prevBtn = document.getElementById('testimonial-prev');
  const nextBtn = document.getElementById('testimonial-next');

  function showTestimonial(index: number) {
    activeIndex = index;

    // Hide all testimonials
    testimonialItems.forEach((item) => {
      item.classList.add('hidden');
    });

    // Show active
    const activeItem = document.querySelector(`[data-testimonial="${index}"]`);
    if (activeItem) {
      activeItem.classList.remove('hidden');
    }

    // Update dots
    dots.forEach((dot, i) => {
      if (i === index) {
        dot.className = 'testimonial-dot w-12 h-3 bg-gradient-to-r from-cyan-600 to-blue-600 transition-all duration-300';
      } else {
        dot.className = 'testimonial-dot w-3 h-3 bg-slate-300 hover:bg-slate-400 transition-all duration-300';
      }
    });
  }

  function nextTestimonial() {
    showTestimonial((activeIndex + 1) % totalTestimonials);
  }

  function prevTestimonial() {
    showTestimonial((activeIndex - 1 + totalTestimonials) % totalTestimonials);
  }

  function resetAutoAdvance() {
    clearInterval(autoInterval);
    autoInterval = setInterval(nextTestimonial, 8000);
  }

  // Event listeners
  nextBtn?.addEventListener('click', () => {
    nextTestimonial();
    resetAutoAdvance();
  });

  prevBtn?.addEventListener('click', () => {
    prevTestimonial();
    resetAutoAdvance();
  });

  dots.forEach((dot) => {
    dot.addEventListener('click', () => {
      const index = parseInt(dot.getAttribute('data-dot') || '0', 10);
      showTestimonial(index);
      resetAutoAdvance();
    });
  });

  // Auto-advance (pauses when section is off-screen)
  const testimonialsSection = document.getElementById('testimonials');

  if (testimonialsSection) {
    const carouselVisObs = new IntersectionObserver(([e]) => {
      if (e.isIntersecting) {
        autoInterval = setInterval(nextTestimonial, 8000);
      } else {
        clearInterval(autoInterval);
      }
    }, { threshold: 0 });
    carouselVisObs.observe(testimonialsSection);
  }

  // Visibility animations
  const testimonialsAnimated = testimonialsSection?.querySelectorAll('[data-animate]');

  if (testimonialsSection && testimonialsAnimated) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            testimonialsAnimated.forEach((el, index) => {
              setTimeout(() => {
                el.classList.add('visible');
              }, index * 150);
            });
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );
    observer.observe(testimonialsSection);
  }
</script>
