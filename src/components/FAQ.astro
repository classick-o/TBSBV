</style>

<script>
  // FAQ accordion - only one open at a time
  const faqItems = document.querySelectorAll('.faq-item');
  let openFaqIndex: number | null = 0;

  function toggleFaq(index: number) {
    const item = document.querySelector(`[data-faq="${index}"]`);
    if (!item) return;

    if (openFaqIndex === index) {
      // Close current
      closeFaq(index);
      openFaqIndex = null;
    } else {
      // Close previously open
      if (openFaqIndex !== null) {
        closeFaq(openFaqIndex);
      }
      // Open new
      openFaq(index);
      openFaqIndex = index;
    }
  }

  function openFaq(index: number) {
    const item = document.querySelector(`[data-faq="${index}"]`);
    if (!item) return;

    const content = item.querySelector('.faq-content');
    const minusIcon = item.querySelector('.faq-icon-minus');
    const plusIcon = item.querySelector('.faq-icon-plus');
    const toggle = item.querySelector('.faq-toggle');

    content?.classList.remove('hidden');
    minusIcon?.classList.remove('hidden');
    plusIcon?.classList.add('hidden');
    toggle?.setAttribute('aria-expanded', 'true');
  }

  function closeFaq(index: number) {
    const item = document.querySelector(`[data-faq="${index}"]`);
    if (!item) return;

    const content = item.querySelector('.faq-content');
    const minusIcon = item.querySelector('.faq-icon-minus');
    const plusIcon = item.querySelector('.faq-icon-plus');
    const toggle = item.querySelector('.faq-toggle');

    content?.classList.add('hidden');
    minusIcon?.classList.add('hidden');
    plusIcon?.classList.remove('hidden');
    toggle?.setAttribute('aria-expanded', 'false');
  }

  // Attach click handlers
  faqItems.forEach((item) => {
    const toggle = item.querySelector('.faq-toggle');
    const index = parseInt(item.getAttribute('data-faq') || '0', 10);
    toggle?.addEventListener('click', () => toggleFaq(index));
  });

  // Visibility animations
  const faqSection = document.getElementById('faq');
  const faqAnimated = faqSection?.querySelectorAll('[data-animate]');

  if (faqSection && faqAnimated) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            faqAnimated.forEach((el, index) => {
              setTimeout(() => {
                el.classList.add('visible');
              }, index * 50);
            });
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );
    observer.observe(faqSection);
  }
</script>
