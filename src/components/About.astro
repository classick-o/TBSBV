<!-- Source: initial-1/TBSBV 4 -->
---
const values = [
  {
    icon: "shield",
    title: "Integrity First",
    description:
      "Ethical practices and unwavering commitment to doing what's right.",
  },
  {
    icon: "users",
    title: "Client-Centric",
    description:
      "Your success and security are at the heart of everything we do.",
  },
  {
    icon: "globe2",
    title: "Global Expertise",
    description:
      "International reach with local knowledge across 45+ countries.",
  },
  {
    icon: "award",
    title: "Excellence Driven",
    description:
      "Relentless pursuit of the highest standards in every investigation.",
  },
];

const stats = [
  { value: "950+", label: "Cases Resolved", color: "cyan" },
  { value: "45+", label: "Countries", color: "blue" },
  { value: "98%", label: "Success Rate", color: "indigo" },
  { value: "24/7", label: "Support", color: "purple" },
];

const certifications = ["ISO 27001", "Licensed PI", "SOC 2 Compliant"];
---

<section
  id="about"
  class="relative py-12 sm:py-16 lg:py-32 bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 overflow-hidden"
>
  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-20">
    <div
      class="absolute inset-0"
      style="background-image: radial-gradient(circle, rgba(56, 189, 248, 0.1) 1px, transparent 1px); background-size: 40px 40px;"
    ></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <!-- Section Header -->
    <div
      data-animate
      class="text-center max-w-3xl mx-auto mb-10 sm:mb-14 lg:mb-20"
    >
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-cyan-500/10 to-blue-500/10 border border-cyan-500/20 mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 text-cyan-400"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
        <span class="text-sm font-medium text-cyan-400 tracking-wide">
          ABOUT TBSBV
        </span>
      </div>
      <h2 class="text-2xl sm:text-4xl lg:text-6xl font-bold text-white mb-4 sm:mb-6 leading-tight">
        Your Trusted Partner in{" "}
        <span class="bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent">
          Digital Security
        </span>
      </h2>
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 mb-20">
      <!-- Left Column - Story -->
      <div
        data-animate
        class="space-y-6"
      >
        <div class="prose prose-invert max-w-none">
          <p class="text-lg text-slate-300 leading-relaxed">
            Founded in 2020, <span class="text-white font-semibold">Transparent Business Solutions B.V. (TBSBV)</span> has rapidly
            become a global leader in cybersecurity, private investigation,
            and due diligence services.
          </p>
          <p class="text-lg text-slate-300 leading-relaxed">
            In an increasingly complex digital landscape, organizations face
            unprecedented threats. Our mission is simple:{" "}
            <span class="text-cyan-400 font-semibold">
              to bring clarity, security, and peace of mind
            </span>{" "}
            through transparent, ethical, and highly effective investigative
            solutions.
          </p>
          <p class="text-lg text-slate-300 leading-relaxed">
            We combine cutting-edge technology with decades of investigative
            expertise to serve Fortune 500 companies, law firms, financial
            institutions, and individuals worldwide.
          </p>
        </div>

        <!-- Certifications -->
        <div class="flex flex-wrap gap-3 pt-4">
          {certifications.map((cert) => (
            <div
              class="px-4 py-2 bg-slate-800/50 border border-slate-700 text-sm text-slate-300 font-medium"
            >
              {cert}
            </div>
          ))}
        </div>
      </div>

      <!-- Right Column - Stats -->
      <div
        data-animate
        class="grid grid-cols-2 gap-6"
      >
        {stats.map((stat) => (
          <div
            class="bg-gradient-to-br from-slate-900 to-slate-800 p-6 border border-slate-800 hover:border-cyan-500/30 transition-all duration-300 hover:shadow-xl hover:shadow-cyan-500/10"
          >
            <div class="text-4xl font-bold bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent mb-2">
              {stat.value}
            </div>
            <div class="text-sm text-slate-400 font-medium">
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Core Values -->
    <div
      data-animate
    >
      <h3 class="text-2xl lg:text-3xl font-bold text-white text-center mb-12">
        Our Core Values
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((value) => (
          <div
            class="group relative bg-slate-900/50 backdrop-blur-sm p-6 border border-slate-800 hover:border-cyan-500/30 transition-all duration-300 hover:shadow-xl hover:shadow-cyan-500/10"
          >
            <div class="w-12 h-12 bg-gradient-to-br from-cyan-500/20 to-blue-500/20 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
              {value.icon === "shield" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 text-cyan-400"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
              )}
              {value.icon === "users" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 text-cyan-400"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
              )}
              {value.icon === "globe2" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 text-cyan-400"><path d="M21.54 15H17a2 2 0 0 0-2 2v4.54"/><path d="M7 3.34V5a3 3 0 0 0 3 3a2 2 0 0 1 2 2c0 1.1.9 2 2 2a2 2 0 0 0 2-2c0-1.1.9-2 2-2h3.17"/><path d="M11 21.95V18a2 2 0 0 0-2-2a2 2 0 0 1-2-2v-1a2 2 0 0 0-2-2H2.05"/><circle cx="12" cy="12" r="10"/></svg>
              )}
              {value.icon === "award" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 text-cyan-400"><path d="m15.477 12.89 1.515 8.526a.5.5 0 0 1-.81.47l-3.58-2.687a1 1 0 0 0-1.197 0l-3.586 2.686a.5.5 0 0 1-.81-.469l1.514-8.526"/><circle cx="12" cy="8" r="6"/></svg>
              )}
            </div>
            <h4 class="text-lg font-bold text-white mb-2">
              {value.title}
            </h4>
            <p class="text-sm text-slate-400 leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
