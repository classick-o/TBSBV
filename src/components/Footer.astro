<!-- Source: initial-1/TBSBV 4 -->
---
const currentYear = new Date().getFullYear();

const services = [
  "Cyber Investigation",
  "Due Diligence",
  "Reputation Management",
  "Digital Forensics",
  "Threat Intelligence",
  "Executive Protection",
];

const companyLinks = [
  { label: "About Us", href: "#about" },
  { label: "Case Studies", href: "#case-studies" },
  { label: "Insights", href: "#insights" },
  { label: "Careers", href: "#contact" },
  { label: "Press", href: "#contact" },
  { label: "Contact", href: "#contact" },
];

const legalLinks = [
  "Privacy Policy",
  "Terms of Service",
  "Cookie Policy",
  "Data Protection",
  "Compliance",
  "Licensing",
];
---

<footer class="relative bg-slate-900 text-white">
  <!-- Main Footer Content -->
  <div class="max-w-[1600px] mx-auto px-6 sm:px-8 lg:px-12 xl:px-20 py-12 sm:py-16 lg:py-24">
    <div class="grid lg:grid-cols-12 gap-8 lg:gap-16 mb-10 sm:mb-16">
      <!-- Brand Column -->
      <div class="lg:col-span-4">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-7 h-7 text-white"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
          </div>
          <div>
            <div class="text-2xl font-bold">TBSBV</div>
            <div class="text-xs text-slate-400">Transparent Business Solutions</div>
          </div>
        </div>
        <p class="text-slate-400 leading-relaxed mb-6">
          Leading cybersecurity, private investigation, and due diligence firm protecting organizations worldwide since 2004.
        </p>
        <div class="space-y-3">
          <a
            href="mailto:info@tbsbv.com"
            class="flex items-center gap-3 text-slate-400 hover:text-cyan-400 transition-colors group"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 flex-shrink-0"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            <span class="text-sm">info@tbsbv.com</span>
          </a>
          <a
            href="tel:+31123456789"
            class="flex items-center gap-3 text-slate-400 hover:text-cyan-400 transition-colors group"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 flex-shrink-0"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            <span class="text-sm">+31 (0)12 345 6789</span>
          </a>
          <div class="flex items-start gap-3 text-slate-400">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 flex-shrink-0 mt-0.5"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/></svg>
            <span class="text-sm">
              Amsterdam, Netherlands<br />
              Global Operations
            </span>
          </div>
        </div>
      </div>

      <!-- Services Column -->
      <div class="lg:col-span-2">
        <h3 class="text-lg font-bold mb-6 text-white">Services</h3>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a
                href="#services"
                class="text-sm text-slate-400 hover:text-cyan-400 transition-colors inline-flex items-center gap-2 group"
              >
                <span>{service}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-3 h-3 opacity-0 group-hover:opacity-100 -ml-2 group-hover:ml-0 transition-all"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Column -->
      <div class="lg:col-span-2">
        <h3 class="text-lg font-bold mb-6 text-white">Company</h3>
        <ul class="space-y-3">
          {companyLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-slate-400 hover:text-cyan-400 transition-colors inline-flex items-center gap-2 group"
              >
                <span>{link.label}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-3 h-3 opacity-0 group-hover:opacity-100 -ml-2 group-hover:ml-0 transition-all"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Column -->
      <div class="lg:col-span-2">
        <h3 class="text-lg font-bold mb-6 text-white">Legal</h3>
        <ul class="space-y-3">
          {legalLinks.map((item) => (
            <li>
              <a
                href="#"
                class="text-sm text-slate-400 hover:text-cyan-400 transition-colors inline-flex items-center gap-2 group"
              >
                <span>{item}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-3 h-3 opacity-0 group-hover:opacity-100 -ml-2 group-hover:ml-0 transition-all"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter Column -->
      <div class="lg:col-span-2">
        <h3 class="text-lg font-bold mb-6 text-white">Stay Updated</h3>
        <p class="text-sm text-slate-400 mb-4">
          Get monthly security insights and threat intelligence updates.
        </p>
        <div class="space-y-3">
          <input
            type="email"
            placeholder="Your email"
            class="w-full px-4 py-3 bg-slate-800 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-cyan-500 transition-colors text-sm"
          />
          <button class="w-full px-4 py-3 bg-gradient-to-r from-cyan-600 to-blue-600 text-white font-semibold text-sm hover:shadow-lg hover:shadow-cyan-500/30 transition-all">
            Subscribe
          </button>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-slate-800 pt-12">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <!-- Copyright -->
        <div class="text-sm text-slate-500">
          &copy; {currentYear} Transparent Business Solutions B.V. All rights reserved.
        </div>

        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-slate-800 hover:bg-cyan-600 border border-slate-700 hover:border-cyan-600 flex items-center justify-center transition-all duration-300"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
          </a>
          <a
            href="https://twitter.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-slate-800 hover:bg-cyan-600 border border-slate-700 hover:border-cyan-600 flex items-center justify-center transition-all duration-300"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg>
          </a>
          <a
            href="https://facebook.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-slate-800 hover:bg-cyan-600 border border-slate-700 hover:border-cyan-600 flex items-center justify-center transition-all duration-300"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
          </a>
        </div>

        <!-- Certifications Badge -->
        <div class="flex items-center gap-3 text-xs text-slate-500">
          <span>ISO 27001</span>
          <span>&bull;</span>
          <span>SOC 2</span>
          <span>&bull;</span>
          <span>GDPR</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-slate-800 bg-slate-950 py-4">
    <div class="max-w-[1600px] mx-auto px-6 sm:px-8 lg:px-12 xl:px-20">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-xs text-slate-600">
        <div>
          Registered in Amsterdam, Netherlands &bull; KVN: 12345678
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-3 h-3"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
          <span>Licensed Private Investigation Firm</span>
        </div>
      </div>
    </div>
  </div>
</footer>
