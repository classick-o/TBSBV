<style>
  #contact [data-animate] {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  #contact [data-animate].visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Animated gradient border */
  .contact-border-glow {
    background: conic-gradient(
      from var(--border-angle, 0deg),
      transparent 40%,
      rgba(6, 182, 212, 0.5) 50%,
      rgba(37, 99, 235, 0.5) 55%,
      transparent 65%
    );
    animation: contact-border-rotate 4s linear infinite;
  }

  @keyframes contact-border-rotate {
    to { --border-angle: 360deg; }
  }

  @property --border-angle {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }

  /* Animated top accent line */
  .contact-accent-line {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(6, 182, 212, 0.8),
      rgba(37, 99, 235, 0.8),
      transparent
    );
    background-size: 200% 100%;
    animation: contact-accent-sweep 3s ease-in-out infinite;
  }

  @keyframes contact-accent-sweep {
    0%, 100% { background-position: -100% 0; }
    50% { background-position: 200% 0; }
  }

  /* Input focus underline animation */
  .contact-input {
    background-image: linear-gradient(to right, rgba(6, 182, 212, 0.6), rgba(37, 99, 235, 0.6));
    background-size: 0% 2px;
    background-position: center bottom;
    background-repeat: no-repeat;
    transition: all 0.3s ease, background-size 0.4s ease;
  }

  .contact-input:focus {
    background-size: 100% 2px;
  }
</style>

<script>
  // Visibility animations for contact section
  const contactSection = document.getElementById('contact');
  const contactAnimated = contactSection?.querySelectorAll('[data-animate]');

  if (contactSection && contactAnimated) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            contactAnimated.forEach((el, index) => {
              setTimeout(() => {
                el.classList.add('visible');
              }, index * 200);
            });
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );
    observer.observe(contactSection);
  }
</script>
