<style>
  #contact [data-animate] {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  #contact [data-animate].visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // Visibility animations for contact section
  const contactSection = document.getElementById('contact');
  const contactAnimated = contactSection?.querySelectorAll('[data-animate]');

  if (contactSection && contactAnimated) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            contactAnimated.forEach((el, index) => {
              setTimeout(() => {
                el.classList.add('visible');
              }, index * 200);
            });
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );
    observer.observe(contactSection);
  }
</script>
