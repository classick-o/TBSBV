    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {awards.map((award, index) => (
        <div
          data-animate
          style={`--delay: ${index * 0.1}s;`}
          class="group relative bg-slate-900/50 backdrop-blur-sm border border-slate-800 hover:border-cyan-500/50 p-8 transition-all duration-500 overflow-hidden"
        >
          <!-- Hover Gradient -->
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/0 to-blue-500/0 group-hover:from-cyan-500/10 group-hover:to-blue-500/10 transition-all duration-500"></div>

          <!-- Content -->
          <div class="relative">
            <!-- Year Badge -->
            <div class="absolute top-0 right-0 px-4 py-1 bg-gradient-to-r from-cyan-500/20 to-blue-500/20 border border-cyan-500/30">
              <span class="text-sm font-bold text-cyan-400">{award.year}</span>
            </div>

            <!-- Icon -->
            <div class="w-16 h-16 bg-gradient-to-br from-cyan-500/20 to-blue-500/20 border border-cyan-500/30 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              {award.icon === "trophy" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8 text-cyan-400"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>
              )}
