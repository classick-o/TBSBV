---
/* Main index page — assembles all sections per initial-1/TBSBV 4/src/app/App.tsx layout */
import BaseLayout from '../layouts/BaseLayout.astro';
import Preloader from '../components/Preloader.astro';
import ScrollProgress from '../components/ScrollProgress.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import WhyUs from '../components/WhyUs.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import TrustSection from '../components/TrustSection.astro';
import CaseStudies from '../components/CaseStudies.astro';
import MetricsSection from '../components/MetricsSection.astro';
import Testimonials from '../components/Testimonials.astro';
import Process from '../components/Process.astro';
import Insights from '../components/Insights.astro';
import FAQ from '../components/FAQ.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import StickyConsultation from '../components/StickyConsultation.astro';

const pageTitle = 'TBSBV — Cybersecurity, Investigations & Due Diligence';
const pageDescription = 'TBSBV delivers world-class cyber investigation, due diligence, and integrity management solutions. Navigate complex digital threats with confidence across 45+ countries.';

/* JSON-LD structured data */
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Transparent Business Solutions B.V.",
  "alternateName": "TBSBV",
  "url": "https://tbsbv.com",
  "logo": "https://tbsbv.com/assets/logo/logo-png.png",
  "image": "https://tbsbv.com/assets/logo/logo-png.png",
  "description": pageDescription,
  "foundingDate": "2020",
  "areaServed": "Worldwide",
  "knowsLanguage": ["en", "nl"],
  "sameAs": [
    "https://www.linkedin.com/company/transparent-business-solutions/",
    "https://www.facebook.com/profile.php?id=61587846142923"
  ],
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Kalvermarkt 53",
    "addressLocality": "The Hague",
    "postalCode": "2511 CB",
    "addressCountry": "NL"
  },
  "contactPoint": [
    {
      "@type": "ContactPoint",
      "telephone": "+31707013260",
      "contactType": "customer service",
      "email": "info@tbsbv.com",
      "availableLanguage": ["English", "Dutch"]
    }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "TBSBV Services",
    "itemListElement": [
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Due Diligence", "url": "https://tbsbv.com/services/due-diligence/" }},
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Cyber Investigations", "url": "https://tbsbv.com/services/cyber-investigations/" }},
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Crypto Tracing", "url": "https://tbsbv.com/services/crypto-tracing/" }},
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Reputation Management", "url": "https://tbsbv.com/services/reputation-management/" }}
    ]
  }
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "TBSBV — Transparent Business Solutions",
  "url": "https://tbsbv.com"
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://tbsbv.com/" }
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    { "@type": "Question", "name": "How confidential are your investigations?", "acceptedAnswer": { "@type": "Answer", "text": "Confidentiality is fundamental to our work. All engagements are handled with strict discretion, secure communication protocols, and controlled information access. We operate in compliance with applicable regulatory and data protection frameworks." }},
    { "@type": "Question", "name": "What industries do you specialize in?", "acceptedAnswer": { "@type": "Answer", "text": "We work across multiple sectors, including financial services, digital assets, corporate transactions, private equity, and high-net-worth advisory matters. Our focus is less on industry labels and more on complex risk, fraud, and intelligence-driven situations." }},
    { "@type": "Question", "name": "How quickly can you respond to urgent cases?", "acceptedAnswer": { "@type": "Answer", "text": "Response times depend on the nature and scope of the matter. In time-sensitive situations, we can mobilize resources rapidly and initiate preliminary assessment immediately. Early action is often critical in financial investigations." }},
    { "@type": "Question", "name": "What is your success rate?", "acceptedAnswer": { "@type": "Answer", "text": "Each case is unique and influenced by jurisdiction, timing, and counterparties involved. While outcomes vary, we consistently deliver actionable intelligence and positive investigative insights that enable informed decisions, escalation, or recovery pathways." }},
    { "@type": "Question", "name": "How do you price your services?", "acceptedAnswer": { "@type": "Answer", "text": "Fees are determined on a case-by-case basis depending on complexity, jurisdictional scope, urgency, and resource allocation. We provide transparent engagement structures once the matter has been assessed." }},
    { "@type": "Question", "name": "Do you work internationally?", "acceptedAnswer": { "@type": "Answer", "text": "Yes. We regularly handle cross-border matters involving multiple jurisdictions, exchanges, financial institutions, and regulatory environments. Our network and investigative capabilities are structured to support international engagements." }},
    { "@type": "Question", "name": "What technology do you use?", "acceptedAnswer": { "@type": "Answer", "text": "We deploy advanced forensic and analytical tools, including blockchain tracing platforms, corporate intelligence databases, open-source intelligence methodologies, and proprietary investigative frameworks." }},
    { "@type": "Question", "name": "Can your findings be used in legal proceedings?", "acceptedAnswer": { "@type": "Answer", "text": "Our reports are structured to meet professional standards and may support regulatory, civil, or law enforcement processes where applicable. The admissibility of findings depends on jurisdiction and legal strategy." }}
  ]
};

const jsonLdHtml = `<script type="application/ld+json">${JSON.stringify(organizationSchema)}</script>
<script type="application/ld+json">${JSON.stringify(websiteSchema)}</script>
<script type="application/ld+json">${JSON.stringify(breadcrumbSchema)}</script>
<script type="application/ld+json">${JSON.stringify(faqSchema)}</script>`;
---

<BaseLayout title={pageTitle} description={pageDescription} jsonLd={jsonLdHtml}>

  <Preloader />
  <ScrollProgress />

  <Header />
  <main>
    <Hero />
    <Services />
    <WhyUs />
    {/* <WhyChooseUs /> */}
    <TrustSection />
    <CaseStudies />
    <MetricsSection />
    <Testimonials />
    <Process />
    <Insights />
    <FAQ />
    <Contact />
  </main>
  <Footer />
  <StickyConsultation />
</BaseLayout>
